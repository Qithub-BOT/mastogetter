{
	"root": true,
	"env": {
		"browser": true,
		"es6": true
	},
	"globals": {
		"moment": false
	},
	"extends": [
		"eslint:recommended",
		"plugin:prettier/recommended"
	],
	"parserOptions": {
		"ecmaVersion": 2018,
		"sourceType": "module"
	},
	"rules": {
		"indent": [
			"error",
			"tab"
		],
		"semi": [
			"error",
			"always"
		],
		"no-tabs": "off",
		"quotes": [
			"error",
			"double",
			{
				"avoidEscape": true
			}
		],
		"no-await-in-loop": "error",
		"require-atomic-updates": "error",
		"array-callback-return": "error",
		"default-case": "error",
		"no-alert": "error",
		"max-len": ["error", { "code": 120 }],
		"space-before-blocks": "error",
		"space-unary-ops":[
				1, {
						"overrides": {
								"typeof": false
						}
				}
		],
		"operator-linebreak": [
				"error", "after", {
						"overrides": { "?": "before", ":": "before" }
				}
		],
		"no-useless-escape":"error",
		"camelcase": "off",
		"prettier/prettier": [
			"error",
			{
				"singleQuote": false,
				"trailingComma": "es5",
				"printWidth": 120,
				"useTabs": true
			}
		]
	}
}